{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Heat Wallet",
  "version": "0.1.0",
  "identifier": "com.heatwallet.desktop",
  "build": {
    "frontendDist": "web-dist"
  },
  "app": {
    "windows": [
      {
        "title": "Heat Wallet",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/16x16.png",
      "icons/32x32.png",
      "icons/48x48.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/1024x1024.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
